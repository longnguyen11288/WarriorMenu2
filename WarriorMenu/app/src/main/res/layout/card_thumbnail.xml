<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flatui="http://schemas.android.com/apk/res-auto">


    <!-- Use same ID to use built-in features -->
    <TextView
        android:id="@+id/card_title"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/rest_title"
        android:textColor="@color/wayne_green"/>
    <ImageView
        android:layout_below="@id/card_title"
        android:layout_marginLeft="6dp"
        android:layout_marginBottom="2dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/card_picture"
        android:src="@drawable/ic_launcher"/>
    <TextView
        android:id="@+id/card_open_close"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:text="NEVER OPEN"
        android:textColor="@color/open_green"/>
    <RatingBar
        android:id="@+id/card_stars"
        android:layout_below="@id/card_title"
        android:layout_toRightOf="@id/card_picture"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        style="?android:attr/ratingBarStyleIndicator"
        android:numStars="5"
        android:rating="0"
        android:isIndicator="true"
        />
    <TextView
        android:id="@+id/card_dollar"
        android:layout_below="@id/card_stars"
        android:layout_toRightOf="@id/card_picture"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Warrior Dollhairs"
        android:textSize="@dimen/address_size"
        android:textColor="@color/black"/>
    <com.cengalabs.flatui.views.FlatButton
        android:id="@+id/card_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:textSize="12dp"
        flatui:theme="@array/custom_theme"
        flatui:blockButtonEffectHeight="5dp"
        flatui:borderWidth="0dp"
        flatui:cornerRadius="2dp"
        flatui:size="20dp"/>


</RelativeLayout>